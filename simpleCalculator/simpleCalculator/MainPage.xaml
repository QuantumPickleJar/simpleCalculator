<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:simpleCalculator"
             x:Class="simpleCalculator.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="What's my age again" FontSize="32" HorizontalTextAlignment="Center">
            <Label.Margin>
                <Thickness Bottom="0" Right="0" Top="0" Left="0" />
            </Label.Margin>
        </Label>

        <Entry Keyboard="Numeric" x:Name="mthEntry"/>
        <Label Text="Month" />
        <Entry Keyboard="Numeric" x:Name="dayEntry"/>
        <Label Text="Day"/>
        <Entry Keyboard="Numeric" x:Name="yrEntry"/>
        <Button Text="Calculate" Clicked="Button_Clicked"/>
        <Label Text="??" HorizontalTextAlignment="Center" FontSize="24" x:Name="ageLabel"/>
    </StackLayout>

</ContentPage>
